<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wx.fbsir.business.point.mapper.PointsRuleMapper">

    <resultMap type="com.wx.fbsir.business.point.domain.PointsRule" id="PointsRuleResult">
        <result property="ruleId"        column="rule_id"        />
        <result property="ruleCode"      column="rule_code"      />
        <result property="ruleName"      column="rule_name"      />
        <result property="pointsValue"   column="points_value"   />
        <result property="limitType"     column="limit_type"     />
        <result property="limitValue"    column="limit_value"    />
        <result property="maxAmount"     column="max_amount"     />
        <result property="status"        column="status"         />
        <result property="sortOrder"     column="sort_order"     />
        <result property="remark"        column="remark"         />
        <result property="createBy"      column="create_by"      />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"     column="update_by"      />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectPointsRuleVo">
        select rule_id, rule_code, rule_name, points_value, limit_type, limit_value, 
               max_amount, status, sort_order, remark, create_by, create_time, update_by, update_time
        from wx_points_rule
    </sql>

    <select id="selectPointsRuleByRuleId" parameterType="Long" resultMap="PointsRuleResult">
        <include refid="selectPointsRuleVo"/>
        where rule_id = #{ruleId}
    </select>

    <select id="selectPointsRuleByRuleCode" parameterType="String" resultMap="PointsRuleResult">
        <include refid="selectPointsRuleVo"/>
        where rule_code = #{ruleCode}
    </select>

    <select id="selectPointsRuleList" parameterType="com.wx.fbsir.business.point.domain.PointsRule" resultMap="PointsRuleResult">
        <include refid="selectPointsRuleVo"/>
        <where>
            <if test="ruleCode != null and ruleCode != ''">
                AND rule_code = #{ruleCode}
            </if>
            <if test="ruleName != null and ruleName != ''">
                AND rule_name LIKE CONCAT('%', #{ruleName}, '%')
            </if>
            <if test="status != null and status != ''">
                AND status = #{status}
            </if>
        </where>
        ORDER BY sort_order ASC, rule_id ASC
    </select>

    <select id="selectEnabledPointsRuleList" resultMap="PointsRuleResult">
        <include refid="selectPointsRuleVo"/>
        WHERE status = '0' AND points_value > 0
        ORDER BY sort_order ASC, rule_id ASC
    </select>

    <insert id="insertPointsRule" parameterType="com.wx.fbsir.business.point.domain.PointsRule" useGeneratedKeys="true" keyProperty="ruleId">
        INSERT INTO wx_points_rule
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="ruleCode != null and ruleCode != ''">rule_code,</if>
            <if test="ruleName != null and ruleName != ''">rule_name,</if>
            <if test="pointsValue != null">points_value,</if>
            <if test="limitType != null">limit_type,</if>
            <if test="limitValue != null">limit_value,</if>
            <if test="maxAmount != null">max_amount,</if>
            <if test="status != null">status,</if>
            <if test="sortOrder != null">sort_order,</if>
            <if test="remark != null">remark,</if>
            <if test="createBy != null">create_by,</if>
            create_time
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="ruleCode != null and ruleCode != ''">#{ruleCode},</if>
            <if test="ruleName != null and ruleName != ''">#{ruleName},</if>
            <if test="pointsValue != null">#{pointsValue},</if>
            <if test="limitType != null">#{limitType},</if>
            <if test="limitValue != null">#{limitValue},</if>
            <if test="maxAmount != null">#{maxAmount},</if>
            <if test="status != null">#{status},</if>
            <if test="sortOrder != null">#{sortOrder},</if>
            <if test="remark != null">#{remark},</if>
            <if test="createBy != null">#{createBy},</if>
            NOW()
        </trim>
    </insert>

    <update id="updatePointsRule" parameterType="com.wx.fbsir.business.point.domain.PointsRule">
        UPDATE wx_points_rule
        <trim prefix="SET" suffixOverrides=",">
            <if test="ruleName != null and ruleName != ''">rule_name = #{ruleName},</if>
            <if test="pointsValue != null">points_value = #{pointsValue},</if>
            <if test="limitType != null">limit_type = #{limitType},</if>
            <if test="limitValue != null">limit_value = #{limitValue},</if>
            <if test="maxAmount != null">max_amount = #{maxAmount},</if>
            <if test="status != null">status = #{status},</if>
            <if test="sortOrder != null">sort_order = #{sortOrder},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            update_time = NOW()
        </trim>
        WHERE rule_id = #{ruleId}
    </update>

    <delete id="deletePointsRuleByRuleId" parameterType="Long">
        DELETE FROM wx_points_rule WHERE rule_id = #{ruleId}
    </delete>

    <delete id="deletePointsRuleByRuleIds" parameterType="String">
        DELETE FROM wx_points_rule WHERE rule_id IN
        <foreach item="ruleId" collection="array" open="(" separator="," close=")">
            #{ruleId}
        </foreach>
    </delete>

</mapper>

