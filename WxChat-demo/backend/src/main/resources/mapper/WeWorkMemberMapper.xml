<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.wxchat.mapper.WeWorkMemberMapper">

    <resultMap type="com.demo.wxchat.domain.WeWorkMember" id="WeWorkMemberResult">
        <result property="id" column="id"/>
        <result property="weWorkUserId" column="wework_user_id"/>
        <result property="teamId" column="team_id"/>
        <result property="memberName" column="member_name"/>
        <result property="department" column="department"/>
        <result property="mobile" column="mobile"/>
        <result property="email" column="email"/>
        <result property="avatar" column="avatar"/>
        <result property="inGroup" column="in_group"/>
        <result property="status" column="status"/>
        <result property="lastVerifyTime" column="last_verify_time"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <select id="selectByWeWorkUserId" parameterType="String" resultMap="WeWorkMemberResult">
        select * from wework_member where wework_user_id = #{weWorkUserId}
    </select>

    <insert id="insert" parameterType="com.demo.wxchat.domain.WeWorkMember" useGeneratedKeys="true" keyProperty="id">
        insert into wework_member (wework_user_id, team_id, member_name, department, mobile, email, avatar, in_group, status, create_time)
        values (#{weWorkUserId}, #{teamId}, #{memberName}, #{department}, #{mobile}, #{email}, #{avatar}, #{inGroup}, #{status}, now())
    </insert>

    <update id="update" parameterType="com.demo.wxchat.domain.WeWorkMember">
        update wework_member
        <set>
            <if test="memberName != null">member_name = #{memberName},</if>
            <if test="department != null">department = #{department},</if>
            <if test="mobile != null">mobile = #{mobile},</if>
            <if test="email != null">email = #{email},</if>
            <if test="avatar != null">avatar = #{avatar},</if>
            <if test="inGroup != null">in_group = #{inGroup},</if>
            <if test="status != null">status = #{status},</if>
            <if test="lastVerifyTime != null">last_verify_time = #{lastVerifyTime},</if>
            update_time = now()
        </set>
        where id = #{id}
    </update>
</mapper>
